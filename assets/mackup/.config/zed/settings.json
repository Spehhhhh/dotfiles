{
  "features": {
    "inline_completion_provider": "copilot"
  },
  "language_models": {
    "openai": {
      "version": "1"
    }
  },
  "vim_mode": true,
  "telemetry": {
    "diagnostics": true,
    "metrics": true
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "notification_panel": {
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "dock": "right",
    "version": "2",
    "provider": null
  },
  "preferred_line_length": 120,
  "base_keymap": "VSCode",
  "autosave": "on_focus_change",
  "format_on_save": "on",
  "buffer_font_family": "MonoLisa Nerd Font",
  "buffer_font_size": 13,
  "show_copilot_suggestions": true,
  "relative_line_numbers": true,
  "scrollbar": {
    "show": "auto",
    "cursors": true,
    "git_diff": true,
    "search_results": true,
    "selected_symbol": true,
    "diagnostics": true
  },
  "terminal": {
    "dock": "bottom",
    "copy_on_select": true,
    "working_directory": "first_project_directory",
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "languages": {
    "Python": {
      //https://github.com/jellydn/zed-101-setup
      "format_on_save": { "language_server": { "name": "ruff" } },
      "formatter": { "language_server": { "name": "ruff" } },
      "language_servers": ["pyright", "ruff"]
    },
    "TypeScript": {
      // Refer https://github.com/jellydn/ts-inlay-hints for how to setup for Neovim and VSCode
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "Rainbow CSV": {
      "soft_wrap": "none"
    }
  },
  "theme": "Catppuccin Mocha",
  "jupyter": {
    "enabled": true
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  }
}
