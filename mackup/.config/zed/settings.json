{
  "assistant": {
    "default_model": {
      "model": "claude-3-5-sonnet-latest",
      "provider": "zed.dev"
    },
    "dock": "left",
    "version": "2"
  },
  "autosave": "on_focus_change",
  "buffer_font_fallbacks": [
    "JetBrainsMono Nerd Font"
  ],
  "buffer_font_family": "MonoLisa",
  "buffer_font_size": 13,
  "chat_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "cursor_blink": false,
  "features": {
    "inline_completion_provider": "copilot"
  },
  "file_finder": {
    "modal_max_width": "medium"
  },
  "format_on_save": "off",
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true
  },
  "languages": {
    "JavaScript": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls"
      ]
    },
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.ruff": true,
            "source.organizeImports.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "indent_guides": {
        "background_coloring": "disabled",
        "coloring": "indent_aware",
        "enabled": true
      },
      "language_servers": [
        "pyright",
        "ruff"
      ]
    },
    "TSX": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls"
      ]
    },
    "TypeScript": {
      "language_servers": [
        "typescript-language-server",
        "!vtsls"
      ]
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false
          }
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    }
  },
  "outline_panel": {
    "dock": "right"
  },
  "preferred_line_length": 120,
  "project_panel": {
    "dock": "right"
  },
  "relative_line_numbers": true,
  "restore_on_startup": "last_session",
  "scrollbar": {
    "show": "never"
  },
  "show_inline_completions": true,
  "ssh_connections": [
    {
      "host": "101.126.71.13",
      "username": "root",
      "projects": []
    },
    {
      "host": "jihuanshe-hetzner-1",
      "projects": [
        {
          "paths": [
            "~/jihuanshe.com/tcgspider"
          ]
        }
      ]
    }
  ],
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    },
    "font_family": "MonoLisa",
    "font_weight": 500
  },
  "theme": "Catppuccin Mocha",
  "ui_font_family": "MonoLisa",
  "ui_font_size": 15,
  "vim": {
    "use_system_clipboard": "on_yank"
  },
  "vim_mode": true
}
